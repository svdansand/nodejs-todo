{
    "restartable": "rs",
    "ignore": [
        ".git",
        "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
        "js": "node --harmony"
    },
    "events": {
        "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [],
    "env": {
        "NODE_ENV": "development",
        "MONGO_DBCONNECTION": "mongodb://localhost:27017/todos"
    },
    "ext": "js json"
}